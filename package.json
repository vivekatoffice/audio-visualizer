{
  "name": "audio-visualizer",
  "version": "1.3.0",
  "description": "Stunning 3D Audio Visualizer with Three.js",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable"
  },
  "keywords": [
    "audio",
    "visualizer",
    "threejs",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.audiovisualizer.app",
    "productName": "Audio Visualizer",
    "win": {
      "icon": "src/assets/audio-visualizer.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "axios-digest": "^0.3.0",
    "ffmpeg-static": "^5.3.0"
  }
}